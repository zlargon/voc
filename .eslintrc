{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
     "sourceType": "module"
  },
  "rules": {
    "indent":           ["error", 2, {"SwitchCase": 1}],
    "linebreak-style":  ["error", "unix"],
    "semi":             ["error", "always"],
    "no-console":       ["off"]
  }
}
